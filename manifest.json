{
    "name": "Darkme",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": " Best Dark Mode Extensions for Google Chrome in 2022   ",
    "background": {
        "scripts": [
            "popup.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js; object-src 'self'",
    "browser_action": {
        "default_title": "Darkme",
        "default_popup": "popup.html"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}